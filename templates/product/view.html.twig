{% extends 'base.html.twig' %}

{% block title %}View product{% endblock %}

{% block body %}
    <div class="row">
        {% if product and product|length > 0 %}
            <div class="card card-product">
                <div class="card-header text-center bg-transparent"><b>{{ product.name }}</b></div>
                <div class="card-body p-1">
                    {% if product.image == null %}
                        <img src="{{ asset('images/product/noimage.jpg') }}" width="545">
                    {% else %}
                        <img src="{{ product.image.url }}" width="545">
                    {% endif %}
                    <p class="card-text p-2">{{ product.description }}</p>
                    <hr class="p-0 m-2">
                    <p class="card-text p-2">
                        {% for category in product.category %}
                            <a href="#"><i class="fas fa-th-list"></i>&nbsp;{{ category.name }}</a>&nbsp;&nbsp;&nbsp;
                        {% endfor %}
                    </p>
                    <hr class="p-0 m-2">
                    <p class="card-text p-2">
                        {% for tag in product.tag %}
                            <a href="#"><i class="fas fa-tag"></i>&nbsp;{{ tag.text }}</a>&nbsp;&nbsp;&nbsp;
                        {% endfor %}
                    </p>
                </div>
                <div class="card-footer text-muted">
                    <a href="#"><i class="far fa-star"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;
                    <a href="#"<i class="fas fa-star"></i></i></a>&nbsp;&nbsp;&nbsp;&nbsp;
                    <small class="text-muted"><i class="fas fa-palette"></i>&nbsp;<span class="color-block" style="background-color: {{ product.color }};">&nbsp;&nbsp;&nbsp;&nbsp;</span></small>&nbsp;&nbsp;&nbsp;&nbsp;
                    <small class="text-muted"><i class="fas fa-warehouse"></i>&nbsp;{{ product.count }}</small>&nbsp;&nbsp;&nbsp;&nbsp;
                    <small class="text-muted"><i class="fas fa-money-bill-wave"></i>&nbsp;{{ product.price }} {{ product.currency }}</small>&nbsp;&nbsp;&nbsp;&nbsp;
                    <small class="text-muted"><i class="fas fa-user"></i>&nbsp;{{ product.manager.firstName }} {{ product.manager.lastName }}</small>
                </div>
            </div>
        {% else %}
            <p>Empty!</p>
        {% endif %}
    </div>
{% endblock %}
