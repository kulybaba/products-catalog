<div class="list-group">
    {% for category in categories %}
        <a href="{{ path('app_category_categoryproducts', {'id': category.id}) }}" class="list-group-item list-group-item-products list-group-item-action d-flex justify-content-between align-items-center">
            <i class="fas fa-angle-right mr-3"></i>{{ category.name|length > 40 ? category.name|slice(0, 39) ~ '...' : category.name }}
            <span class="badge badge-primary badge-pill ml-3">{{ category.products.count }}</span>
        </a>
    {% endfor %}
</div>
